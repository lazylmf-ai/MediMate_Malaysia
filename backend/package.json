{
  "name": "medimate-malaysia-backend",
  "version": "1.0.0",
  "description": "MediMate Malaysia Healthcare Backend API with Malaysian Cultural Intelligence",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:migrate": "npm run db:migrate:up",
    "db:migrate:up": "psql -d ${POSTGRES_DB:-medimate_dev} -f database/migrations/001_healthcare_extension.sql",
    "db:migrate:down": "psql -d ${POSTGRES_DB:-medimate_dev} -f database/migrations/001_healthcare_extension_rollback.sql",
    "db:seed": "psql -d ${POSTGRES_DB:-medimate_dev} -f database/seeds/001_healthcare_extension_seed.sql",
    "db:test": "./database/migrations/test_migration.sh",
    "db:reset": "npm run db:migrate:down && npm run db:migrate:up && npm run db:seed",
    "health-check": "curl -f http://localhost:${PORT:-3000}/health || exit 1"
  },
  "keywords": [
    "healthcare",
    "malaysia",
    "api",
    "nodejs",
    "typescript",
    "express",
    "postgresql",
    "pdpa",
    "cultural-intelligence",
    "islamic",
    "multilingual"
  ],
  "author": "MediMate Malaysia Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "winston": "^3.11.0",
    "moment-timezone": "^0.5.43",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "@types/node": "^20.8.9",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.16",
    "@types/compression": "^1.7.5",
    "@types/pg": "^8.10.7",
    "@types/redis": "^4.0.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.5",
    "@types/uuid": "^9.0.6",
    "@types/multer": "^1.4.10",
    "@types/jest": "^29.5.7",
    "@types/supertest": "^2.0.16",
    "@types/nodemailer": "^6.4.13",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.52.0",
    "@typescript-eslint/parser": "^6.9.1",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.test.ts"
    ],
    "exec": "ts-node -r tsconfig-paths/register src/app.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lazylmf-ai/MediMate_Malaysia.git"
  },
  "bugs": {
    "url": "https://github.com/lazylmf-ai/MediMate_Malaysia/issues"
  },
  "homepage": "https://github.com/lazylmf-ai/MediMate_Malaysia#readme"
}