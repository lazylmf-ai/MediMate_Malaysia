            }
          ],
          "sortBy": "date",
          "sortOrder": "desc",
          "limit": 50,
          "size": "large"
        }
      ]
    }
  ],
  "filters": [
    {
      "name": "language",
      "label": "Language",
      "type": "multi_select",
      "options": ["ms", "en", "zh", "ta"],
      "default": "all"
    },
    {
      "name": "device_type",
      "label": "Device Type",
      "type": "multi_select",
      "options": ["mobile", "tablet", "desktop"],
      "default": "all"
    },
    {
      "name": "content_type",
      "label": "Content Type",
      "type": "multi_select",
      "options": ["article", "video", "infographic", "interactive"],
      "default": "all"
    },
    {
      "name": "content_category",
      "label": "Content Category",
      "type": "multi_select",
      "options": ["diabetes", "hypertension", "heart_disease", "mental_health", "nutrition", "exercise"],
      "default": "all"
    },
    {
      "name": "user_type",
      "label": "User Type",
      "type": "multi_select",
      "options": ["patient", "caregiver"],
      "default": "all"
    }
  ],
  "export": {
    "enabled": true,
    "formats": ["csv", "excel", "pdf"],
    "scheduled_reports": {
      "daily": {
        "enabled": true,
        "time": "09:00",
        "timezone": "Asia/Kuala_Lumpur",
        "recipients": ["product-team@medimate.my"]
      },
      "weekly": {
        "enabled": true,
        "day": "Monday",
        "time": "10:00",
        "timezone": "Asia/Kuala_Lumpur",
        "recipients": ["product-team@medimate.my", "leadership@medimate.my"]
      },
