        {
          "type": "bar_chart",
          "title": "Rating Distribution",
          "metric": "ratings",
          "dimension": "rating_value",
          "aggregation": "count",
          "size": "small"
        },
        {
          "type": "table",
          "title": "Recent Feedback",
          "columns": [
            {
              "name": "date",
              "label": "Date",
              "type": "datetime"
            },
            {
              "name": "feedback_type",
              "label": "Type",
              "type": "string"
